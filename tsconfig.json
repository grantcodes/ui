{
  "compilerOptions": {
    "target": "ESNext",
    "outDir": "dist",
    "moduleResolution": "Node",
    "module": "ESNext",
    "lib": ["dom", "DOM.Iterable", "esnext"],
    "esModuleInterop": true,
    "strict": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "declaration": true,
    "typeRoots": ["node_modules/@types", "src/types"],
    "allowSyntheticDefaultImports": true,
    "rootDir": "src",
    "baseUrl": "src",
    "declarationDir": "dist",
    "sourceMap": true,
    "experimentalDecorators": true,
    "useDefineForClassFields": false
  },
  "include": ["src", ".react-components/Provider", ".react-components"],
  "exclude": [
    "**/node_modules",
    "dist",
    "storybook-static",
    "src/**/*.stories.ts",
    "src/**/*.stories.tsx",
    "src/**/*.test.tsx"
  ]
}
