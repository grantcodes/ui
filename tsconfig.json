{
  "compilerOptions": {
    "target": "ESNext",
    "outDir": "dist",
    "moduleResolution": "Node",
    "module": "ESNext",
    "lib": ["dom", "DOM.Iterable", "esnext"],
    "esModuleInterop": true,
    "strict": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "declaration": true,
    "typeRoots": ["node_modules/@types", "src/types"],
    "allowSyntheticDefaultImports": true,
    "rootDir": "src",
    "baseUrl": "src",
    "declarationDir": "dist",
    "sourceMap": true,
    "jsx": "react"
  },
  "include": ["src"],
  "exclude": [
    "**/node_modules",
    "build",
    "dist",
    "storybook-static",
    "src/**/*.stories.tsx",
    "src/**/*.test.tsx"
  ]
}
